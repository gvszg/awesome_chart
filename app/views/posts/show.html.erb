<!-- Main -->
<div id="main" class="wrapper style4">
  <div class="container">
    <div class="row">
  
      <!-- Content -->
      <div id="content" class="8u skel-cell-important">
        <section>
          <header class="major">
            <h2><%= @post.title %></h2>
            <span class="byline">
              by manager at <%= @post.created_at.strftime("%Y/%m/%d") %>
            </span>
          </header>
          <p><%= @post.description %></p>          
        </section>
      </div>            

      <!-- Sidebar -->
      <div id="sidebar" class="4u">
        <section>
          <header class="major">
            <h2>Recent New</h2>
          </header>                 
          <ul class="default">
            <% Post.enable.recent.each do |post| %>
              <li><%= link_to post.title, post %></li>
            <% end %>

